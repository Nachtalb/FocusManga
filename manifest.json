{
  "name": "FocusManga",
  "version": "0.1",
  "manifest_version": 2,

  "description": "Adds diashow function to online manga sites.",

  "permissions": [
    "tabs"
  ],

  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.mangapanda.com/*",
        "*://*.onepiece-tube.com/*",
        "*://*.batoto.net/*",
        "*://*.mangafox.me/*",
        "*://*.mangareader.net/*",
        "*://*.mangainn.com/*",
        "*://*.goodmanga.net/*",
        "*://*.mangaeden.com/*",
        "*://*.perveden.com/*",
        "*://*.mangahere.com/*",
        "*://*.hbrowse.com/*"
      ],
      "js": ["jquery-1.10.2.js", "jquery.timer.js", "hoster.js", "focus.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    "img/close-circle.png",
    "img/play.png",
    "img/stop.png",
    "img/options.png"
  ]
}
