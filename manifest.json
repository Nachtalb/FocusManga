{
  "name": "FocusManga",
  "version": "0.1",
  "manifest_version": 2,

  "description": "Adds diashow function to online manga sites.",

  "permissions": [
    "tabs"
  ],

  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "http://www.perveden.com/en-manga/*/*/*",
        "http://www.mangapanda.com/*",
        "http://www.onepiece-tube.com/*"
      ],
      "js": ["jquery-1.10.2.js", "jquery.timer.js", "focus.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    "img/close-circle.png",
    "img/play.png",
    "img/stop.png",
    "img/options.png"
  ]
}
