{
  "name": "FocusManga",
  "version": "0.7.1",
  "manifest_version": 2,

  "description": "Adds diashow function to online manga sites.",
  "icons": {"128": "img/slideshow.png"},

  "permissions": [
    "tabs"
  ],

  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "page_action": {
    "default_title": "Start/Stop FocusManga",
    "default_icon": "img/slideshow.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.mangapanda.com/*/*",
        "*://*.onepiece-tube.com/kapitel/*/*",
        "*://*.batoto.net/read/*",
        "*://*.mangafox.me/manga/*/*/*",
        "*://*.mangareader.net/*/*",
        "*://*.mangainn.com/manga/chapter/*",
        "*://*.goodmanga.net/*/chapter/*",
        "*://*.mangastream.to/*",
        "*://*.manga.animea.net/*",
        "*://*.mangaeden.com/*/*/*/*",
        "*://*.perveden.com/*/*/*/*",
        "*://*.mangahere.com/manga/*/*/*",
        "*://*.hbrowse.com/*/*"
      ],
      "js": ["lib/jquery-1.10.2.js", "lib/jquery.timer.js", "hoster.js", "focus.js", "cleanup.js"],
      "css": ["hide.css", "style.css"]
    }
  ],
  "web_accessible_resources": [
    "img/close-circle.png",
    "img/play.png",
    "img/stop.png",
    "img/options.png"
  ]
}
